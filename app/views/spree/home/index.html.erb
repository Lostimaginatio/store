<%= @top_content.body.html_safe if @top_content %>

<br>

<h3>Категории товаров</h3>

<div id="main-menu">

  <% @taxonomies.each do |taxonomy| %>
      <%= link_to taxonomy.name, seo_url(taxonomy.root), class: 'main-menu-item' %>
  <% end %>
</div>

<br>

<h3>Последние статьи</h3>

<div class="articles_wrap">

  <% @articles.each do |article| %>
      <div class="article">
        <h2><a href="/articles/<%= article.id %>"><%= article.name %></a></h2>
        <div class="article_preview">
          <%= strip_tags article.content.split('.')[0].html_safe %>.
        </div>
      </div>
  <% end %>

</div>

<br>

<h3>Последние акции</h3>

<div class="sales_wrap">

  <% @sales.each do |sale| %>
      <div class="sale">
        <h2><a href="/sales/<%= sale.id %>"><%= sale.name %></a></h2>
        <div class="sale_preview">
          <%= strip_tags sale.content.split('.')[0].html_safe %>.
        </div>
      </div>
  <% end %>

</div>

<br>

<%= @bottom_content.body.html_safe if @bottom_content %>
