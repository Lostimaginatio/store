<div id="map" style="width: 100%; height:400px"></div>
<script src="//api-maps.yandex.ru/2.0/?load=package.standard&lang=ru-RU" type="text/javascript"></script>
<script>
  var myMap;
  ymaps.ready(init);
  function init () {
    myMap = new ymaps.Map('map', {
      center:[48.727742, 44.491787],
      zoom:14
    });
    myMap.controls
        .add('zoomControl', { left: 5, top: 5 })
        .add('typeSelector')
        .add('mapTools', { left: 35, top: 5 });
    myMap.geoObjects.add(new ymaps.Placemark([48.727742, 44.491787], {
      balloonContent: 'ООО "Бетар-волга", главный офис'
    }));
  }
</script>

