<div data-hook="admin_role_form_fields">

  <%= f.field_container :name, class: ["form-group"], 'data-hook' => "sale_name" do %>
    <%= f.label 'Название' %> <span class="required">*</span>
    <%= f.text_field :name, class: 'form-control' %>
    <%= f.error_message_on :name %>
  <% end %>

  <%= f.field_container :content, class: ["form-group"], 'data-hook' => "sale_content" do %>
      <%= f.label 'Содержание' %> <span class="required">*</span>
      <%= f.text_area :content, class: 'form-control' %>
      <%= f.error_message_on :content %>
  <% end %>

  <div data-hook="additional_sale_fields"></div>
</div>

<script type="text/javascript">
    $(document).ready(function(){
        $('#sale_content').wysihtml5();
    })
</script>
